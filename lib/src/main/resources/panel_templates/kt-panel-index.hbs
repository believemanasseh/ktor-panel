<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="/static/logo.ico">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Index</title>
</head>
<body>
<nav class="flex flex-row w-[70vw] text-center m-[5px_auto] bg-[#35373b] min-h-14">
    <!-- Left Arrow -->
    <button id="scrollLeft" class="flex flex-row px-2 z-10 bg-[#35373b] text-white hover:bg-black"
            style="display:none;">&#8592;
    </button>

    <!-- Scrollable List -->
    <div id="navScroll" class="flex flex-row overflow-x-auto w-full">
        <a class="list-none font-bold text-white p-4 cursor-pointer active:bg-black"
           href="/{{configuration.url}}"
        >{{configuration.adminName}}</a>
        {{#tables}}
            <a class="capitalize no-underline text-[15px] font-bold text-white p-4 cursor-pointer hover:bg-black active:bg-black"
               href="/{{configuration.url}}/{{.}}/list"
            >{{.}}
            </a>
        {{/tables}}
    </div>

    <!-- Right Arrow -->
    <button id="scrollRight" class="flex flex-row px-2 bg-[#35373b] text-white hover:bg-black"
            style="display:none;">&#8594;
    </button>
</nav>

{{#isAuthenticated}}
    <div class="flex flex-row justify-end w-[85vw]"><a
            class="text-indigo-600 hover:text-indigo-700 underline" href="/{{configuration.url}}/logout">Logout</a>
    </div>
{{/isAuthenticated}}

<script>
    const navScroll = document.getElementById('navScroll');
    const scrollLeft = document.getElementById('scrollLeft');
    const scrollRight = document.getElementById('scrollRight');

    // Hide scrollbar
    navScroll.style.scrollbarWidth = 'none';
    navScroll.style.msOverflowStyle = 'none';
    navScroll.style.overflowY = 'hidden';

    // Arrow scroll logic
    function updateArrows() {
        scrollLeft.style.display = navScroll.scrollLeft > 0 ? '' : 'none';
        scrollRight.style.display = navScroll.scrollLeft + navScroll.clientWidth < navScroll.scrollWidth ? '' : 'none';
    }

    scrollLeft.onclick = () => {
        navScroll.scrollBy({left: -150, behavior: 'smooth'});
    };
    scrollRight.onclick = () => {
        navScroll.scrollBy({left: 150, behavior: 'smooth'});
    };
    navScroll.onscroll = updateArrows;
    window.onload = updateArrows;
</script>
</body>
</html>

