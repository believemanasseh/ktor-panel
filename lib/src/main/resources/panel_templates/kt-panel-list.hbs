<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/tailwind.min.css">
    <link rel="icon" type="image/x-icon" href={{configuration.favicon}}>
    <title>List</title>
</head>
<body class="bg-gray-50">
<nav class="flex flex-row w-[70vw] m-[5px_auto] bg-[#35373b] min-h-14">
    <a class="font-bold text-base text-white p-4 cursor-pointer active:bg-black"
       href="/{{configuration.url}}">
        {{configuration.adminName}}
    </a>
</nav>

{{#successMessage}}
    <div id="success-message"
         class=" w-[70vw] m-auto bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
         role="alert">
        <span class="block sm:inline">{{successMessage}}</span>
    </div>
{{/successMessage}}

<main class="w-[70vw] m-[20px_auto]">
    {{#tablesData}}
        <header class="mb-6">
            <h1 class="text-2xl font-bold text-gray-800">{{tableName}}</h1>
            <p class="text-sm text-gray-500">Showing all records</p>
        </header>
        <div class="bg-white shadow rounded-lg overflow-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                <tr>
                    {{#tablesData.headers}}
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            {{.}}
                        </th>
                    {{/tablesData.headers}}
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {{#tablesData.data.values}}
                    <tr class="hover:bg-gray-50 transition-colors">
                        {{#nums}}
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                {{.}}
                            </td>
                        {{/nums}}
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/{{configuration.url}}/{{tableNameLowercased}}/edit/{{id}}"
                               class="text-indigo-600 hover:text-indigo-900 mr-3">Edit</a>
                            <a href="/{{configuration.url}}/{{tableNameLowercased}}/delete/{{id}}"
                               class="text-red-600 hover:text-red-900">Delete</a>
                        </td>
                    </tr>
                {{/tablesData.data.values}}
                </tbody>
            </table>
        </div>
    {{/tablesData}}
    {{^tablesData}}
        <div class="bg-white shadow rounded-lg p-6 text-center">
            <p class="text-gray-500">No records found in this table.</p>
        </div>
    {{/tablesData}}

    <div class="mt-4 flex justify-end">
        <a href="/{{configuration.url}}/{{tableNameLowercased}}/new"
           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Add New
        </a>
    </div>
</main>
</body>
<script>
    setTimeout(() => {
        const successMessage = document.getElementById('success-message');
        if (successMessage) {
            successMessage.style.display = 'none';
        }
    }, 5000);
</script>
</html>

